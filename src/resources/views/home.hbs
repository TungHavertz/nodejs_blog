<div class="m-5 px-5">
  <div class="row row-gap-2">
    {{#each courses}}
    <div class="col-sm-6 col-lg-3">
      <div class="card">
        <a href="/courses/{{this.slug}}">
          <img src="{{this.thumpnail}}" class="card-img-top" alt="..." />
        </a>
        <div class="card-body">
          <a href="/courses/{{this.slug}}" class="text-decoration-none text-dark">
            <h5 class="card-title">{{this.name}}</h5>
          
          </a>
          <p class="card-text">{{this.description}}</p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>